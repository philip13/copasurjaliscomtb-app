<div class="row">
  <div class="col-sm-12 _margin-bottom-35px">
   <%= form_for [@rider, @register], url: rider_registers_path do |form| %>

       <% if @register.errors.any? %>
        <% @register.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>

      <%= form.hidden_field :rider_id, :value => @rider.id %>
      <div class="form-group">
        <%= form.label :category %>
        <%= form.select :category, options_for_select(@categories, @register.category), {:prompt => true }, { :class => 'form-control' } %>
       </div>

      <div class="form-group">
        <%= form.label :race_id %>
        <%= form.select :race_id, options_for_select(@races, @register.race_id), {:prompt => true }, { :class => 'form-control' } %>
       </div>

      <div class="form-group">
        <%= form.label :race_result %>
        <%= form.text_field :race_result, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :points %>
        <%= form.number_field :points, step: 1, min: 0, class: 'form-control' %>
      </div>

      <div class="form-group text-right">
        <%= form.submit "Guardar", :class => 'btn btn-primary' %>
       </div>
    <% end %>
  </div>
</div>


