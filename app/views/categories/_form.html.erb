<div class="row">
  <div class="col-sm-12 _margin-bottom-35px">
    <%= form_with(model: @category) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
       </div>
     
      <div class="form-group">
        <%= form.label :code %>
        <%= form.text_field :code, class: 'form-control' %>
       </div>

      <div class="form-group">
        <%= form.label :years_range %>
        <%= form.text_field :years_range, class: 'form-control' %>
       </div>
  
      <div class="form-group">    
        <%= form.label :laps %>
        <%= form.number_field :laps, class: 'form-control' %>
       </div>

       <div class="form-group">
         <%= form.label :group%>
         <%= form.select :group, options_for_select(CATEGORY_GROUPS, "#{@category.nil? ? '' : @category.group}"), {:prompt => true}, { :class => 'form-control' } %>
         <% %>
       </div>

      <div class="form-group">
        <%= form.submit "Guardar", :class => 'btn btn-primary' %>
       </div>
    <% end %>
  </div>
</div>

