<div class="row">
  <div class="col-sm-12 text-center">
    <h1>Categorias</h1>
  </div>
  <div class="col-sm-12 text-right">
    <hr>
    <%= link_to "Nueva Categoria", new_category_path, class: "btn btn-primary" %>
    <hr>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Categoria</th>
        <th>Letra Código</th>
        <th>Años</th>
        <th>Vueltas</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.code %></td>
          <td><%= category.years_range %></td>
          <td><%= category.laps %></td>
          <td class="text-right">
            <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_category_path(category), class: "btn btn-xs btn-primary" %>
            <%= link_to "<span class='glyphicon glyphicon-eye-open'></span>".html_safe, category_path(category), class: "btn btn-xs btn-info" %>
            <%= link_to "<span class='glyphicon glyphicon glyphicon-trash'></span>".html_safe, category_path(id: category.id),
                          method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-warning" %>  
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
