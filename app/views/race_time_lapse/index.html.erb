<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>RaceTimeLapse</h1>
    </div>
    
    <div class="col-sm-12 text-center hidden" id="timeNowContainer">
    	<h2>Hora Actual: <span class="text-danger" id="timeNow"></span></h2>
    	<h2>Hora de Arranque: 
    		<span class="text-success" id="startRace"></span>
    	</h2>
    </div>
    <div class="col-sm-12 text-center" id="newLapButton">
    </div>
		
		<%= form_tag('/race_time_lapse/index', method: 'GET', remote: true, :class => 'form-horizontal ', id: 'formStartLap') do %>
		  <div class="form-group">
		    <label for="race_id" class="col-sm-2 control-label">Race</label>
		    <div class="col-sm-10">
		    	<%= select_tag  "race_id", options_from_collection_for_select(@races, "id", "title"), include_blank: "-- Can't be blank --", class: "form-control", required: true %>
		    </div>
		  </div>
			<br/>

		  <div class="form-group">
      	<label for="start_lap" class="col-sm-2 control-label">Start Race</label>
      	<div class="col-sm-10">
	        <div class='input-group date' id='datetimepicker3'>
	           <%= text_field_tag( 'start_lap', nil, class: 'form-control', id: 'start_lap') %>
	           <span class="input-group-addon">
	           <span class="glyphicon glyphicon-time"></span>
	           </span>
	        </div>
      	</div>
     </div>
		 <br/>

		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <!-- <a type="submit" class="btn btn-default"></a> -->
		      <%= submit_tag  nil, class: "btn btn-default" %>
		    </div>
		  </div>
		<% end %>

    <div class="col-sm-12 text-right">

    </div>
    <div class="col-sm-12">
      <div class="table-responsive" id="race-time-lapse-index-table">
        <%= render :partial => 'race_time_lapses', :locals => {race_time_lapses: @race_time_lapses} %>
      </div>
    </div> 
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Lap time</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="red-button btn-sml" data-dismiss="modal">Close Ad</button>
      </div>
    </div>
  </div>
</div>