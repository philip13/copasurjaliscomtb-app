<!-- _form.html.erb -->
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 _padding-top-bottom-30px">
    <%= form_with(model: @race_time_lapse) do |form| %>

      <div class="form-group">    
        <%= form.label :pad_number %>
        <%= form.number_field :pad_number, :class => 'form-control', required: true %>
       </div>

      <div class="form-group">
        <%= form.submit "Guardar", :class => 'btn btn-primary' %>
       </div>
    <% end %>
  </div>
</div>